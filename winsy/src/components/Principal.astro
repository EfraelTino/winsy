<style>
    .slider-row {
        overflow: hidden;
        position: relative;
    }

    .slider-track-left {
        display: flex;
        width: max-content;
        animation: scroll-left 50s linear infinite;
    }

    .slider-track-right {
        display: flex;
        width: max-content;
        animation: scroll-right 50s linear infinite;
    }

    /* Animaciones */
    @keyframes scroll-left {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-50%);
        }
    }

    @keyframes scroll-right {
        from {
            transform: translateX(-50%);
        }
        to {
            transform: translateX(0);
        }
    }

    /* Im치genes responsivas */

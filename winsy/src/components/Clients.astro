        name: "Banco de la Nación",
    },
    {
        id: 2,
        photo: "/clients/19xhzv.webp",
        name: "Ministerio de Cultura",
    },
    {
        id: 3,
        photo: "/clients/u3l0fq.png",
        name: "Municipalidad de Lima",
    },
    { id: 4, photo: "/clients/eesk80.png", name: "Telefónica" },
    { id: 5, photo: "/clients/ybqn8j.png", name: "Backus" },
    {
        id: 6,
        photo: "/clients/jl89sx.png",
        name: "Rimac Seguros",
    },
    {
        id: 7,
        photo: "/clients/u0k147.png",
        name: "Universidad de Lima",
    },
    { id: 8, photo: "/clients/p9x176.png", name: "BBVA" },
    { id: 9, photo: "/clients/2q97de.png", name: "Claro Perú" },
    { id: 10, photo: "/clients/ykhqkl.jpg", name: "Mapfre" },
    {

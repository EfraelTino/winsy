---
import Form from "./Form.astro"
---
<section class="grid py-10 gap-2 p-4 bg-[#0a0a0a] w-full" id="contacto">
    <div class="max-w-6xl mx-auto w-full">
        <h2 class="text-2xl md:text-5xl text-center font-semibold text-white">
            Contacta con nosotros
        </h2>
        <div class="mx-auto py-10">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
                <!-- Columna Izquierda -->
                <div class="space-y-6 md:space-y-12">
                    <div
                        class="w-full h-full transition-all duration-300  py-16"
                    >
                        <div
                            class="bg-[#25d466] mx-auto rounded-full w-16 h-16 flex items-center justify-center mb-4 shadow-lg"
                        >
                            <svg
                                width="1em"
                                height="1em"
                                class="w-12 h-12 mx-auto p-1 text-white"
                                data-icon="mdi:whatsapp"
                            >
                                <symbol
                                    id="ai:mdi:whatsapp"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        fill="currentColor"
                                        d="M12.04 2c-5.46 0-9.91 4.45-9.91 9.91c0 1.75.46 3.45 1.32 4.95L2.05 22l5.25-1.38c1.45.79 3.08 1.21 4.74 1.21c5.46 0 9.91-4.45 9.91-9.91c0-2.65-1.03-5.14-2.9-7.01A9.82 9.82 0 0 0 12.04 2m.01 1.67c2.2 0 4.26.86 5.82 2.42a8.23 8.23 0 0 1 2.41 5.83c0 4.54-3.7 8.23-8.24 8.23c-1.48 0-2.93-.39-4.19-1.15l-.3-.17l-3.12.82l.83-3.04l-.2-.32a8.2 8.2 0 0 1-1.26-4.38c.01-4.54 3.7-8.24 8.25-8.24M8.53 7.33c-.16 0-.43.06-.66.31c-.22.25-.87.86-.87 2.07c0 1.22.89 2.39 1 2.56c.14.17 1.76 2.67 4.25 3.73c.59.27 1.05.42 1.41.53c.59.19 1.13.16 1.56.1c.48-.07 1.46-.6 1.67-1.18s.21-1.07.15-1.18c-.07-.1-.23-.16-.48-.27c-.25-.14-1.47-.74-1.69-.82c-.23-.08-.37-.12-.56.12c-.16.25-.64.81-.78.97c-.15.17-.29.19-.53.07c-.26-.13-1.06-.39-2-1.23c-.74-.66-1.23-1.47-1.38-1.72c-.12-.24-.01-.39.11-.5c.11-.11.27-.29.37-.44c.13-.14.17-.25.25-.41c.08-.17.04-.31-.02-.43c-.06-.11-.56-1.35-.77-1.84c-.2-.48-.4-.42-.56-.43c-.14 0-.3-.01-.47-.01"
                                    >
                                    </path>
                                </symbol>
                                <use href="#ai:mdi:whatsapp"></use>
                            </svg>
                        </div>
                     <!--   <h2
                            class="text-black w-full md:text-3xl text-center font-semibold"
                        >
                            Contacta con nosotros
                        </h2> -->
                        <p class="text-sm text-center text-white">Llámanos o escríbenos</p>
                        <p
                            class="text-black font-bold text-4xl md:text-6xl text-center py-2 text-white"
                        >
                            989 094 633
                        </p>
                        <div
                            class="flex justify-center items-center mt-6 md:mt-12"
                        >
                            <a
                                class="flex flex-row flex-nowrap items-center justify-center content-center relative cursor-pointer overflow-hidden w-[118px] h-9 px-3 py-2 gap-2 rounded-xl bg-[#25d466] hover:bg-[#009b39] transition-all text-white text-sm font-normal antialiased opacity-100 shadow-[inset_0_2px_0_0_rgba(255,255,255,0.1)]"
                                href="https://wa.link/m4tjp0"
                                target="_blank"
                            >
                                <svg
                                    width="1em"
                                    height="1em"
                                    viewBox="0 0 24 24"
                                    class="w-24 h-24 mx-auto text-white"
                                    data-icon="mdi:whatsapp"
                                >
                                    <use href="#ai:mdi:whatsapp"></use>
                                </svg>WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Columna Central - Teléfono -->
                <div class="flex justify-center order-2 md:order-1">
                    <Form />
                </div>
            </div>
        </div>
    </div>
</section>
